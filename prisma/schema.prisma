generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model auth {
  id                   Int       @id @default(autoincrement())
  email                String    @db.VarChar(100)
  pass                 String    @db.VarChar(255)
  active               Boolean?  @default(false)
  user_id              Int
  failed_attempts      Int?      @default(0)
  password_reset_token String?   @db.VarChar(255)
  role                 String?   @default("user") @db.VarChar(20)
  locked_until         DateTime? @db.Timestamp(0)
  last_login           DateTime? @db.Timestamp(0)
  deleted_at           DateTime? @db.Timestamp(0)
  created_at           DateTime? @default(now()) @db.Timestamp(0)
  updated_at           DateTime? @db.Timestamp(0)
  users                users     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_user")

  @@index([user_id], map: "fk_user")
}

model companies {
  id           Int       @id @default(autoincrement())
  name         String?   @db.VarChar(255)
  trading_name String?   @db.VarChar(100)
  active       Boolean?  @default(false)
  created_at   DateTime? @default(now()) @db.Timestamp(0)
  updated_at   DateTime? @db.Timestamp(0)
  deleted_at   DateTime? @db.Timestamp(0)
}

model users {
  id   Int     @id @default(autoincrement())
  name String? @db.VarChar(100)
  auth auth[]
}
